<Window x:Class="VectorEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VectorEditor" Height="800" Width="1200"
        KeyDown="Window_KeyDown"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <Window.DataContext>
        <local:MainViewModel xmlns:local="clr-namespace:VectorEditor"/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- App panel background changed slightly to contrast with canvas -->
        <Border Grid.Column="0" Background="#F0F4F8" Margin="8" CornerRadius="4">
            <StackPanel Margin="10">
                <TextBlock Text="Инструменты" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Save/Open controls -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Открыть" Click="OpenButton_Click" Margin="0,0,6,0" />
                    <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,0,6,0" />
                    <Button Content="Сохранить как..." Click="SaveAsButton_Click" />
                </StackPanel>

                <Button Content="Прямоугольник" Command="{Binding StartRectangleCommand}" Margin="0,0,0,6"/>
                <Button Content="Эллипс" Command="{Binding StartEllipseCommand}" Margin="0,0,0,6"/>
                <Button Content="Линия" Command="{Binding StartLineCommand}" Margin="0,0,0,6"/>
                <Button Content="Многоугольник" Command="{Binding StartPolygonCommand}" Margin="0,0,0,6"/>
                <Separator Margin="0,10,0,10"/>

                <!-- Zoom controls -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock Text="Масштаб:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button Content="-" Command="{Binding ZoomOutCommand}" Width="28" Height="22"/>
                    <Slider Width="140" Minimum="0.2" Maximum="3" Value="{Binding Zoom, Mode=TwoWay}" SmallChange="0.1" LargeChange="0.5" Margin="6,0"/>
                    <Button Content="+" Command="{Binding ZoomInCommand}" Width="28" Height="22" Margin="6,0"/>
                    <Button Content="100%" Command="{Binding ResetZoomCommand}" Margin="6,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                    <TextBlock Text="Цвет:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox ItemsSource="{Binding Colors}" SelectedItem="{Binding SelectedColor}" Width="120">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="12" Fill="{Binding Brush}" Stroke="Black" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button
                Click="Button_Click" Command="{Binding ApplyColorToSelectedCommand}" Content="Применить цвет" Width="123" Margin="6,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                    <TextBlock Text="Обводка:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox ItemsSource="{Binding Colors}" SelectedItem="{Binding SelectedStrokeColor}" Width="155">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="12" Fill="{Binding Brush}" Stroke="Black" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="Применить" Command="{Binding ApplyStrokeColorToSelectedCommand}" Margin="6,0,0,0"/>
                </StackPanel>
                <Button Content="Удалить выделенную" Command="{Binding RemoveSelectedCommand}" Margin="0,0,0,6"/>

                <!-- Selected shape editor -->
                <ContentControl Content="{Binding SelectedShape}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" Padding="6" Margin="0,6,0,6" Background="#FFF">
                                <StackPanel>
                                    <TextBlock Text="Выделенная фигура:" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Type}" Margin="0,4,0,6"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                                        <TextBlock Text="Ширина:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBox Text="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" PreviewTextInput="NumberOnly_PreviewTextInput"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                                        <TextBlock Text="Высота:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBox Text="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" PreviewTextInput="NumberOnly_PreviewTextInput"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                                        <TextBlock Text="Заливка:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <Rectangle Width="24" Height="16" Fill="{Binding Fill}" Stroke="Black"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                                        <TextBlock Text="Обводка:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <Rectangle Width="24" Height="16" Fill="Transparent" Stroke="{Binding Stroke}" StrokeThickness="2"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>

                <Button Content="Переместить фигуру" Command="{Binding StartMovingCommand}" Margin="0,0,0,6"/>
                <Button Content="Очистить холст" Command="{Binding ClearCommand}" Margin="0,0,0,6"/>
                <Button Content="Отменить" Command="{Binding UndoCommand}" Margin="0,0,0,6"/>
                <Button Content="Повторить" Command="{Binding RedoCommand}" Margin="0,0,0,6"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="DrawingCanvas" Background="White" Width="1600" Height="1200"
                        MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                        MouseMove="Canvas_MouseMove"
                        MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                        MouseRightButtonDown="Canvas_MouseRightButtonDown">
                    <Canvas.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding Zoom}" ScaleY="{Binding Zoom}" />
                    </Canvas.LayoutTransform>

                    <ItemsControl ItemsSource="{Binding Shapes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Bind Content to the item so ContentTemplate is used -->
                                <ContentControl Content="{Binding}">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Rectangle">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Rectangle Width="{Binding Width}" Height="{Binding Height}" Fill="{Binding Fill}" Stroke="{Binding Stroke}" StrokeThickness="2"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Ellipse">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Ellipse Width="{Binding Width}" Height="{Binding Height}" Fill="{Binding Fill}" Stroke="{Binding Stroke}" StrokeThickness="2"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Line">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Line X1="0" Y1="0"
                                                                      X2="{Binding EndX}"
                                                                      Y2="{Binding EndY}"
                                                                      Stroke="{Binding Stroke}"
                                                                      StrokeThickness="2"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Polygon">
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <Polygon Points="{Binding Points}" Fill="{Binding Fill}" Stroke="{Binding Stroke}" StrokeThickness="2"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
